@model IEnumerable<PresentationLayer.Models.Vehicle.VehicleShowAllViewModel>

@{
    ViewData["Title"] = "ShowAll";
}
<script defer type="text/javascript">
    function editData(id) {
        window.location.href = '/Vehicle/Edit/' + id;
    }


    function deleteData(id) {
        window.location.href = '/Vehicle/Disable/' + id;
    }

</script>
<!--link de acesso para cadastrar novo veiculo-->
<a class="flex items-center justify-between p-4 mb-8 text-sm font-semibold text-purple-100 bg-purple-600 rounded-lg shadow-md focus:outline-none focus:shadow-outline-purple"
   href="/Vehicle/Create/">
    <div class="flex items-center">
        <span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Cadastrar novo veículo :</font></font></span>
    </div>
    <span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Clique aqui →</font></font></span>
</a>
<!--inicio da tabela-->
<!--Cabeçalho-->
<table class="w-full whitespace-no-wrap">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th class="px-4 py-3">
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th class="px-4 py-3">
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th class="px-4 py-3">
                @Html.DisplayNameFor(model => model.Cor)
            </th>
            <th class="px-4 py-3">
                @Html.DisplayNameFor(model => model.Placa)
            </th>
            <th class="px-4 py-3">
                @Html.DisplayNameFor(model => model.TamanhoVeiculo)
            </th>
            <th class="px-4 py-3">
                @Html.DisplayNameFor(model => model.TipoVeiculo)
            </th>
            <th class="px-4 py-3"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Ações</font></font></th>
        </tr>
    </thead>
    <!--Inicio do conteudo da tabela-->
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="px-4 py-3">
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td class="px-4 py-3">
                    @Html.DisplayFor(modelItem => item.Modelo)
                </td>
                <td class="px-4 py-3">
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td class="px-4 py-3">
                    @Html.DisplayFor(modelItem => item.Cor)
                </td>
                <td class="px-4 py-3">
                    @Html.DisplayFor(modelItem => item.Placa)
                </td>
                <td class="px-4 py-3">
                    @Html.DisplayFor(modelItem => item.TamanhoVeiculo)
                </td>
                <td class="px-4 py-3">
                    @Html.DisplayFor(modelItem => item.TipoVeiculo)
                </td>
                <!--Botoes para editar ou deletar com icones (lapis ou lata de lixo)-->
                <td class="px-4 py-3">
                    <div class="flex items-center space-x-4 text-sm">
                        <button onclick="editData(@item.ID)" class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray" aria-label="Editar">
                            <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
                            </svg>
                        </button>
                        <button onclick="deleteData(@item.ID)" class="flex items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-purple-600 rounded-lg dark:text-gray-400 focus:outline-none focus:shadow-outline-gray" aria-label="Excluir">
                            <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                            </svg>
                        </button>
                    </div>
                </td>
                <!--Linhas criadas pelo Razor-->
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>*@
            </tr>
        }
    </tbody>
</table>
